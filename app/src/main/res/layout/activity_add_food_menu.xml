<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_food_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chayen.cookingsupporter.NavigationAndSearch.AddFoodMenu"
    android:background="@color/themecolorhunt_2">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layout_addfoodrecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add Food Recipe"
                android:textSize="30dp"
                android:id="@+id/textview"
                android:textStyle="bold"
                android:textColor="@color/themecolorhunt_1"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Food Name"
                android:textSize="20dp"
                android:id="@+id/textview2"
                android:textStyle="bold"
                android:textColor="@color/themecolorhunt_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/layout1"
                android:background="@drawable/button_money_border">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/text_addfood_name"
                    android:maxLines="1"
                    android:layout_gravity="center_vertical"
                    android:textColorHighlight="@color/themecolorhunt_4"
                    android:textColorHint="@color/themecolorhunt_4"
                    android:textColor="@color/themecolorhunt_4"
                    android:hint="ชื่ออาหาร..." />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Food Type"
                android:textSize="20dp"
                android:id="@+id/textview3"
                android:textStyle="bold"
                android:textColor="@color/themecolorhunt_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/layout2"
                android:background="@drawable/button_money_border">

                <Spinner
                    android:id="@+id/text_addfood_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ingredient"
                android:textSize="20dp"
                android:id="@+id/textview4"
                android:textStyle="bold"
                android:textColor="@color/themecolorhunt_1" />

            <LinearLayout
                android:id="@+id/layout_addedittext_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/text_addfood_ingredient"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColorHighlight="@color/themecolorhunt_4"
                    android:textColorHint="@color/themecolorhunt_4"
                    android:textColor="@color/themecolorhunt_4"
                    android:background="@drawable/button_money_border"
                    android:hint="หมู 300 กรัม" />
            </LinearLayout>


            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:id="@+id/ingredient_plus_edittext_button"
                android:src="@drawable/plus_button_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Cooking Method"
                android:textSize="20dp"
                android:id="@+id/textview5"
                android:textStyle="bold"
                android:textColor="@color/themecolorhunt_1" />

            <LinearLayout
                android:id="@+id/layout_addedittext_cookingmethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/text_addfood_cookingmethod"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_money_border"
                    android:textColorHighlight="@color/themecolorhunt_4"
                    android:textColorHint="@color/themecolorhunt_4"
                    android:textColor="@color/themecolorhunt_4"
                    android:hint="ขั้นตอนการทำ..." />
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:id="@+id/cookingmethod_plus_edittext_button"
                android:src="@drawable/plus_button_blue" />

            <Button
                android:id="@+id/upload_foodrecipe_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/buttoncolor_yellow"
                android:textColor="@color/colorBrightRed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:id="@+id/foodrecipe_image"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/add_foodrecipe_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Add Food Recipe"
                    android:background="#fb4f9f"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
