<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chayen.cookingsupporter.NavigationAndSearch.Search.Search"
    android:background="@color/themecolorhunt_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchactivity_id">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ค้นหาสูตรอาหาร"
            android:textSize="22sp"
            android:id="@+id/searchpage_textview"
            android:textStyle="bold"
            android:textColor="@color/themecolorhunt_1"
            android:layout_centerHorizontal="true"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchpage_textview"
            android:layout_marginTop="10sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ค้นหาด้วยชื่อสูตรอาหาร"
            android:textSize="18sp"
            android:id="@+id/textview_searchbyrecipename"
            android:textStyle="bold"
            android:textColor="@color/themecolorhunt_1"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/searchpage_layout1"
            android:layout_below="@+id/textview_searchbyrecipename"
            android:background="@drawable/button_money_border">

            <EditText
                android:id="@+id/searchpage_foodname"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:focusable="true"
                android:hint="@string/food_name_text"
                android:textColor="#777"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                tools:ignore="RtlHardcoded"
                android:maxLines="1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchpage_layout1"
            android:layout_marginTop="10sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ค้นหาด้วยวัตถุดิบ"
            android:textSize="18sp"
            android:id="@+id/textview_searchbyrecipeingredient"
            android:textStyle="bold"
            android:textColor="@color/themecolorhunt_1"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/searchpage_layout2"
            android:layout_below="@+id/textview_searchbyrecipeingredient"
            android:background="@drawable/button_money_border">

            <EditText
                android:id="@+id/searchpage_foodingredient"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:focusable="true"
                android:hint="@string/ingredient_text"
                android:textColor="#777"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                tools:ignore="RtlHardcoded"
                android:maxLines="1" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchpage_layout2"
            android:layout_marginTop="10sp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ค้นหาโดยตัดสูตรที่มีวัตถุดิบ"
            android:textSize="18sp"
            android:id="@+id/textview_searchbyrecipeingredient2"
            android:textStyle="bold"
            android:textColor="@color/themecolorhunt_1"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/searchpage_layout3"
            android:layout_below="@+id/textview_searchbyrecipeingredient2"
            android:background="@drawable/button_money_border">

            <EditText
                android:id="@+id/searchpage_foodingredient_nothave"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:focusable="true"
                android:hint="@string/ingredient_text"
                android:textColor="#777"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                tools:ignore="RtlHardcoded"
                android:maxLines="1" />
        </RelativeLayout>

        <Button
            android:id="@+id/searchpage_button"
            android:layout_below="@+id/searchpage_layout3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="20sp"
            android:nestedScrollingEnabled="false"
            android:background="@color/themecolorhunt_1"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>
