<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.example.chayen.cookingsupporter.LoginRegister">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/logo"
                android:src="@drawable/cooking_supporter_logo"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/user_id"
            android:background="@drawable/button_money_border">
            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/textUserId"
                android:hint="User_ID"
                android:focusable="true"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/imageView"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_mobileno" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:id="@+id/password"
            android:background="@drawable/button_money_border">
            <EditText
                android:inputType="numberPassword"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:ems="10"
                android:id="@+id/textPassword"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:hint="Password"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/imageView2"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_pin" />
        </RelativeLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="LOGIN"
            android:textSize="20dp"
            android:nestedScrollingEnabled="false"
            android:onClick="buttonOnClick"
            android:background="#333"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:layout_marginTop="80dp"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Account"
        android:textSize="20dp"
        android:id="@+id/create_new_account"
        android:textStyle="bold"
        android:textColor="#777"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Forgot password"
        android:textSize="20dp"
        android:id="@+id/forgot_password"
        android:textStyle="bold"
        android:textColor="#777"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"/>
</FrameLayout>
