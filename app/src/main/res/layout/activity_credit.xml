<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themecolorhunt_2"
    tools:context="com.example.chayen.cookingsupporter.NavigationAndSearch.Credit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/credit"
        android:layout_marginTop="20sp"
        android:textSize="30sp"
        android:id="@+id/textview_credit"
        android:textStyle="bold"
        android:textColor="@color/themecolorhunt_1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ขอขอบคุณสูตรอาหารต่างๆจาก..."
        android:textSize="20sp"
        android:layout_below="@id/textview_credit"
        android:id="@+id/textview_credit2"
        android:textStyle="bold"
        android:textColor="@color/themecolorhunt_1"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_credit2"
        android:layout_marginLeft="20sp"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="http://www.zabwer.com/"
            android:autoLink="web"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="http://www.thaifooddb.com/thaifood_menu.html"
            android:autoLink="web"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="https://cookpad.com/th"
            android:autoLink="web"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <com.rey.material.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="https://cooking.kapook.com/view122164.html"
            android:autoLink="web"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>
